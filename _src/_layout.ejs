<!DOCTYPE html>
<html>
  <head lang="en">
    <%- partial( "_partials/head/_meta" ) %>
    <%- partial( "_partials/head/_css" ) %>
    <%- partial( "_partials/head/_ie9scripts" ) %>
    <%- partial( "_partials/head/_icons" ) %>
  </head>
  <body>
  <%- partial( "_partials/body/_header" ) %>
    <section id="blog" class="container">
      <%- partial( "_partials/body/_blog-whole-title" ) %>
      <div class="blog">
        <div class="row">
          <div class="col-md-8">
            <div class="blog-item">
              <div class="row">
                <div class="col-xs-12 col-sm-12 blog-content">
                  <h1><%- title %></h1>
                  <p><%- description %></p>
                  <%- yield %>
                  <% if (typeof references !== 'undefined' ) { %>
                  <div>
                    <h2 id="references">References</h2>
                    <div class="references">
                      <ol>
                        <% for(var i in references){ %>
                        <li><%- references[i].author %>, <a href="<%- references[i].link %>"><strong>"<%- references[i].title %>"</strong></a>, <%- references[i].citation %></li>
                        <% } %>
                      </ol>
                    </div>
                  </div>
                  <% } %>
                </div>
              </div>
            </div><!--/.blog-item-->
          </div><!--/.col-md-8-->

          <%- partial( "_partials/body/_aside" ) %>
        </div>
      </div>
    </section>


  </body>
  <%- partial( "_partials/end/_scripts" ) %>
  <%- partial( "_partials/end/_google_analytics" ) %>
</html>